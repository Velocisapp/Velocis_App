    <script>
        let earthImg; let arrivalCityTime = "";
        const HUB_DATABASE = { "CDG": { currency: "EUR", tip: "Take RER B." }, "LHR": { currency: "GBP", tip: "Heathrow Express." }, "JFK": { currency: "USD", tip: "AirTrain." }, "DXB": { currency: "AED", tip: "Metro." }, "HKG": { currency: "HKD", tip: "Airport Express." } };
        function preload() { earthImg = loadImage('https://raw.githubusercontent.com/mrdoob/three.js/master/examples/textures/planets/earth_atmos_2048.jpg', img => { img.crossOrigin = 'anonymous'; }); }
        function setup() { let canvas = createCanvas(windowWidth, windowHeight, WEBGL); canvas.style('position', 'fixed'); canvas.style('top', '0'); canvas.style('z-index', '1'); perspective(PI/3.0, width/height, 0.1, 5000); }
        function draw() { background(0); if (!earthImg) return; ambientLight(210); pointLight(255, 255, 255, 600, 200, 1000); push(); translate(0, -100, 0); rotateY(frameCount * 0.005); noStroke(); texture(earthImg); sphere(100); pop(); }
        function windowResized() { resizeCanvas(windowWidth, windowHeight); }
        function updateTicker() { const now = new Date(); const localTime = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }); const options = { hour: '2-digit', minute: '2-digit', timeZone: arrivalCityTime || 'Europe/Paris' }; const missionTime = now.toLocaleTimeString([], options); const cityLabel = arrivalCityTime ? "DESTINATION" : "PARIS"; document.getElementById('status-ticker').innerText = `LOCAL: ${localTime} | ${cityLabel}: ${missionTime} | COMMAND ACTIVE`; }
        setInterval(updateTicker, 1000);
        async function fetchFlightData() { const ACCESS_KEY = 'b872fb58a154f90cc42b93589772a8e4'; const inputVal = document.getElementById('flight-query')?.value; const FLIGHT_IATA = inputVal ? inputVal.trim().toUpperCase() : 'UA54'; try { const response = await fetch(`https://api.aviationstack.com/v1/flights?access_key=${ACCESS_KEY}&flight_iata=${FLIGHT_IATA}`); const result = await response.json(); if (result.data && result.data.length > 0) { const flight = result.data[0]; const carousel = flight.arrival.baggage || "WAITING..."; const airline = flight.airline.name.toUpperCase(); const terminal = flight.arrival.terminal || "1"; document.getElementById('hub-mission-status').innerText = `${airline} DETECTED`; document.getElementById('hub-carousel').innerText = `CAROUSEL: ${carousel}`; document.getElementById('hub-terminal').innerText = `TERM: ${terminal}`; const arrivalCode = flight.arrival.iata; if (HUB_DATABASE[arrivalCode]) { const info = HUB_DATABASE[arrivalCode]; const intelParagraphs = document.querySelectorAll("#travel-guides p"); if (intelParagraphs.length > 0) { intelParagraphs[0].innerHTML = `<span style="color: #00ffff;">${arrivalCode} (${info.currency}):</span> ${info.tip}`; } } } } catch (error) { console.log("Mission Data Error:", error); } }
        function closeArrival() { document.getElementById('arrival-modal').style.display = 'none'; }
        function openTransportMarket() { closeArrival(); document.getElementById('ground-transport-market').scrollIntoView({behavior: 'smooth'}); }
        function toggleInstallGuide(show) { document.getElementById('install-guide-overlay').style.display = show ? 'flex' : 'none'; }
        window.addEventListener('load', () => { setTimeout(fetchFlightData, 3000); });
    </script>
</body>
